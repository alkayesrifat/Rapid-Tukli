{
   "name": "Rapid Tukli",
   "version": "1.0.0",
   "description": "Rapid Tukli Note Extension by Al Kayes Rifat",
   "manifest_version": 2,
   "author": "Al Kayes Rifat",
   "background": {
     "scripts": [
       "js/background.js"
     ]
   },
   "browser_action": {
      "default_icon": "logo48.png",
      "default_popup": "popup.html",
      "default_title": "Rapid Tukli"
   },
   "icons": {
      "128": "logo128.png",
      "48": "logo48.png"
   },
   "permissions": [ "background", "unlimitedStorage" ]
}
